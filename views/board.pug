extends layout

block content
  h1= title
  p rows: #{query.rows} , columns: #{query.cols}
  - let row = Number(query.rows)
  - let col = Number(query.cols)
  - if (!Number.isInteger(row) || !Number.isInteger(col))
    P rows and columns must be Integers
  - else if(row < 1 || row > 10)
    p rows must be in range of 1 to 10
  - else if(col < 1 || col > 10)
    p cols must be in range of 1 to 10
  - else
    table#outer
      - for(let i = 0; i < row; i++)
        tr#middle
          - for(let j = 0; j < col; j++)
            - let dataCell = 0;
              - if (i === j)
                - dataCell = 1;
              - else if (i === j + 1)
                - dataCell = 2;
              - else if (i === j - 1)
                - dataCell = i;
              td= dataCell
